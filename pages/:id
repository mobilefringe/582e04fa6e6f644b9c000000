<div class="trim_screen">
    <div class="row">
        <div class="page_content">
            <h1 id="page_title"></h1>
            <div id="page_body">
                
            </div>
            <h3 id="404_msg">Sorry we can't find the page you're looking for.</h3>
        </div>
    </div>
</div>
<script>
    $(document).ready(function(e){
        function renderAll(){
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            prefix = get_prefix();
            var pages_json = prefix + "/pages/" + slug + ".json"
            console.log(pages_json);
            $.getJSON(pages_json).done(function(data) {
                $('#page_title').html(data.title);
                $('#page_body').html(data.body);
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            }); 
        }
        loadMallDataCached(renderAll); 
    })
</script>