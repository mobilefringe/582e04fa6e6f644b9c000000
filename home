<script>
    $(document).ready(function(e){
        // init(e);
        function renderAll(){
            var banners = getBanners();
            renderBanner('#home_banner_template','#home_banner', banners);
            var feature_items = getFeatureList();
            renderFeatureItems('#latest_fashion','#latest_fashion_template', feature_items);
            
            
            var stores = getNewStoresList().sortBy(function(o){ return o.created_at });;
            var new_stores = stores.reverse().slice(0, 3);
            renderGeneral("#latest_stores", "#latest_stores_template", new_stores);


            $('.flexslider').flexslider({
                animation: "slide",
            });
        }
        loadMallData(renderAll); 
    })
</script>