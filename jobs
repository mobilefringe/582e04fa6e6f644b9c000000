<div class="row">
    <div class="trim_screen job_page">
        <h1>Jobs</h1>
        
        <div class="accordion" id="accordion2">
            <div id="jobs_container">
                <script id="jobs_template" type="x-tmpl-mustache/text">
                    <h3>{{store_name}}</h3>
                    <div class="accordion-group" >
                        <div class="accordion-heading"> 
                            <div class="accordion-toggle" data-toggle="collapse" data-parent="#accordion{{id}}" href="#collapse{{id}}" > 
                                <h4 class="job_title">{{name}}
                                    <img src="https://www.mallmaverick.com/system/site_images/photos/000/002/328/original/icon_gotop.png?1397446990" class="pull-right" />
                                </h4>
                            </div>
                            <div id="collapse{{id}}" class="accordion-body collapse">
                                <div class="accordion-inner">
