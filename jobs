<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var jobs = getJobsList().sortBy(function(o){ return o.id});
            console.log(jobs);
            var store_name = getStoreDetailsByID(val.jobable_id).name;
            console.log(store_name);
            var published_jobs = [];
            $.each(jobs, function(key, val){
                today = moment();
                webDate = moment(val.show_on_web_date)
                if (today.tz(getPropertyTimeZone()) >= webDate.tz(getPropertyTimeZone())) {
                    published_jobs.push(val);
                } 
            });
            if(published_jobs.length > 0){
                renderJobs('#jobs_container', '#jobs_template', published_jobs);
            }
            else{
                $('#no_jobs').show()
            }
        }
        loadMallDataCached(renderAll); 
    })
</script>